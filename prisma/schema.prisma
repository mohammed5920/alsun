// ===============================================
// JOIN TABLES (Connecting Users to Content)
// ===============================================

model Enrollment {
  enrollmentId String   @id @default(cuid())
  enrolledAt   DateTime @default(now())

  variantType ModuleVariantType
  pricePaid    Int 

  studentId String
  student   User   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  moduleId String
  module   Module @relation(fields: [moduleId], references: [moduleId], onDelete: Cascade)

  @@unique([studentId, moduleId])
}

// ===============================================
// METADATA TABLES
// ===============================================

model Error {
  errorId String   @id @default(cuid())
  errorTimestamp   DateTime @default(now())
  userId String?
  message String
}