// ===============================================
// prisma stuff
// ===============================================

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ===============================================
// generated by better-auth
// ===============================================

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  bio           String?
  roleLevel     Int       @default(1)

  modulesAssigned Module[]
  enrollments Enrollment[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// ===============================================
// TAGS - Ways of tagging learning materials
// ===============================================

enum CourseTagType {
  Language //english, french...
  Category //business, academic...
  Framework //toefl, ielts...
  Special //certified, has exam...
}

model CourseTag {
  tagId   String        @id @default(cuid())
  name    String        @unique
  type    CourseTagType
  courses Course[]      @relation("CourseTags")
}

enum ModuleVariantType {
  PRIVATE_ONLINE
  PRIVATE_ONSITE
  GROUP_ONLINE
  GROUP_ONSITE
}

enum ModuleContentType {
  WHATSAPP
  LINK
  FILE
}

// ===============================================
// CONTENT - Models for the learning materials
// ===============================================

model Course {
  courseId     String   @id @default(cuid())
  title        String
  description  String
  thumbnailUrl String
  isPublic     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  modules Module[]
  tags    CourseTag[] @relation("CourseTags")
}

model Module {
  moduleId    String   @id @default(cuid())
  title       String
  description String
  courseId    String
  course      Course   @relation(fields: [courseId], references: [courseId], onDelete: Cascade)
  index       Int
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  variants ModuleVariant[]

  enrollments Enrollment[]
  contents    ModuleContent[]
  teachers    User[]
}

model ModuleContent {
  contentId   String            @id @default(cuid())
  contentType ModuleContentType
  viewableBy  ModuleVariantType[]
  title       String
  url         String

  moduleId String
  module   Module @relation(fields: [moduleId], references: [moduleId], onDelete: Cascade)
}

model ModuleVariant {
  variantId      String       @id @default(cuid())
  moduleId     String
  variantType ModuleVariantType
  price        Int

  module Module @relation(fields: [moduleId], references: [moduleId], onDelete: Cascade)
}

